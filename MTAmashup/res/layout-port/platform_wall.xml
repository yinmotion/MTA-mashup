<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/platform_wall"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/platform_v2">
	<ImageView
	    android:id="@+id/splash_train"
	    android:layout_width="630px"
	    android:layout_height="wrap_content"
	    android:paddingTop="193px"
	    android:src="@drawable/splash_train"
	    android:visibility="invisible" />
	<LinearLayout
          android:id="@+id/platform_container"
	       android:layout_width="fill_parent"
	       android:layout_height="fill_parent"
	       android:paddingTop="20dp"
	       android:paddingBottom="20dp"
	       android:orientation="vertical"
	       android:layout_gravity="center_horizontal">
	</LinearLayout>    

</FrameLayout>