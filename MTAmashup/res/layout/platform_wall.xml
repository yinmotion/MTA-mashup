<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/platform_wall"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/platform_v2"
    android:padding="0dp"
    >
    <LinearLayout
	    android:id="@+id/linearLayout1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:gravity="center_vertical" >

		<ProgressBar
		    android:id="@+id/refreshLoader"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_horizontal"
		    android:visibility="invisible"
		    />

	</LinearLayout>
	<ImageView
	    android:id="@+id/splash_train"
	    android:layout_width="800px"
	    android:layout_height="wrap_content"
	    android:paddingTop="160px"
	    android:src="@drawable/splash_train"
	    android:visibility="invisible" />
	<LinearLayout
          android:id="@+id/platform_container"
	       android:layout_width="fill_parent"
	       android:layout_height="fill_parent"
	       android:paddingTop="35dp"
	       android:paddingBottom="20dp"
	       android:orientation="vertical"
	       android:layout_gravity="center_horizontal">
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/main_menu_container"
	    android:layout_gravity="bottom"
	    android:orientation="vertical"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:visibility="invisible"
	    >
		<View
		    android:id="@+id/main_menu_bar"
	    	android:layout_width="match_parent" 
	    	android:layout_height="5dp"
	    	android:background="@color/yellow"
		    
		    android:layout_marginBottom="1dp"
		    />
		
		<GridView
		    android:id="@+id/main_menu"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:verticalSpacing="0dp"
		    android:numColumns="4"
		    android:horizontalSpacing="1dp"
		    android:stretchMode="columnWidth"
		    android:drawSelectorOnTop="true"
		    android:listSelector="@drawable/menu_selector"
		    
		    />
	    
	</LinearLayout>    

</FrameLayout>